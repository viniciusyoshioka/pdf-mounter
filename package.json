{
    "name": "pdf-mounter",
    "version": "0.0.1",
    "description": "A tool that automates the creation of PDF files, reading all the images inside a folder and adding a certain amount of images per page.",
    "license": "MIT",
    "private": true,
    "type": "commonjs",
    "main": "./src/index.ts",
    "module": "./dist/index.js",
    "author": "Vinicius Yoshioka <71671043+viniciusyoshioka@users.noreply.github.com> (https://github.com/viniciusyoshioka)",
    "repository": "https://github.com/viniciusyoshioka/pdf-mounter",
    "bugs": {
        "url": "https://github.com/viniciusyoshioka/pdf-mounter/issues"
    },
    "homepage": "https://github.com/viniciusyoshioka/pdf-mounter",
    "keywords": [
        "pdf",
        "pdf file",
        "pdf creation",
        "pdf automation",
        "images",
        "image to pdf",
        "add images to pdf",
        "add images per page",
        "automation",
        "pdfkit",
        "sharp"
    ],
    "scripts": {
        "postinstall": "npm run build",
        "lint": "eslint . --ext .js --ext .jsx --ext .ts --ext .tsx",
        "typecheck": "tsc --noEmit",
