    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@stylistic/eslint-plugin": "^1.7.0",
        "@types/pdfkit": "^0.13.1",
        "@typescript-eslint/eslint-plugin": "^7.3.1",
        "@typescript-eslint/parser": "^7.3.1",
        "@vinicius1313/eslint-config": "^1.2.2",
        "@vinicius1313/tsconfig": "^1.0.0",
        "eslint": "^8.57.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "typescript": "^5.4.3"
    }
