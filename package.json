{
    "name": "pdf-mounter",
    "version": "1.0.0",
    "description": "A tool that automates the creation of PDF files, reading all the images inside a folder and adding a certain amount of images per page.",
    "license": "MIT",
    "private": true,
    "type": "module",
    "main": "./src/index.ts",
    "module": "./dist/index.js",
    "author": "Vinicius Yoshioka <71671043+viniciusyoshioka@users.noreply.github.com> (https://github.com/viniciusyoshioka)",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/viniciusyoshioka/pdf-mounter.git"
    },
    "bugs": {
        "url": "https://github.com/viniciusyoshioka/pdf-mounter/issues"
    },
    "homepage": "https://github.com/viniciusyoshioka/pdf-mounter",
    "keywords": [
        "pdf",
        "pdf file",
        "pdf creation",
        "pdf automation",
        "images",
        "image to pdf",
        "add images to pdf",
        "add images per page",
        "automation",
        "pdfkit",
        "sharp"
    ],
    "scripts": {
        "postinstall": "npm run build",
        "lint": "eslint './src/**/*.{js,cjs,mjs,jsx,ts,cts,mts,tsx}'",
        "typecheck": "tsc --noEmit",
        "test": "yarn node --experimental-vm-modules $(yarn bin jest)",
        "build": "tsc -p ./tsconfig.json",
        "start": "node ./dist/index.js"
    },
    "dependencies": {
        "arg": "^5.0.2",
        "pdfkit": "^0.17.2",
        "sharp": "^0.34.5"
    },
    "devDependencies": {
        "@jest/globals": "^30.2.0",
        "@stylistic/eslint-plugin": "^5.6.1",
        "@types/pdfkit": "^0.17.3",
        "@vinicius1313/eslint-config": "^2.2.0",
        "@vinicius1313/tsconfig": "^2.0.0",
        "eslint": "^9.39.1",
        "jest": "^30.2.0",
        "ts-jest": "^29.4.5",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.47.0"
    }
}
